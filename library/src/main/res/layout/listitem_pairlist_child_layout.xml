<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/tv_pair_item_key"
                android:gravity="right|center_vertical" >

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/sb_pair_item_value"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    toggle:onColor="@color/accent" />

                <TextView
                    android:id="@+id/tv_pair_item_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="1111"
                    android:textColor="@color/common_summary_color"
                    android:textSize="@dimen/common_text_size"
                    android:visibility="gone" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_pair_item_value"
                    style="@style/ImageStyle"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_pair_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tv_pair_item_key"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_pair_item_key"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv_pair_icon"
                android:gravity="right|center"
                android:text="测试" />

            <ImageView
                android:id="@+id/show_message_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_more"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_pair_item_description"
            style="@style/SummaryTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout1"
            android:layout_marginLeft="16dp"
            android:paddingBottom="5dp"
            android:text="测试" />
    </RelativeLayout>

    <include
        android:id="@+id/child_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        layout="@layout/divider" />

</LinearLayout>